<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!--<?xml-stylesheet href="chrome://yulup/skin/findreplace.css" type="text/css"?>-->

<!--<!DOCTYPE dialog SYSTEM "chrome://yulup/locale/findreplace.dtd">-->

<dialog id="uiYulupEditorFindReplaceDialog"
        orient="vertical"
        align="stretch"
        title="Find &amp; Replace"
        buttons="cancel"
        ondialogcancel="return true"
        onload="FindReplace.onLoadListener()"
        style="font: -moz-dialog;"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!--<stringbundle id="uiYulupEditorStringbundle" src="chrome://yulup/locale/findreplace.properties"/>-->

  <script type="application/x-javascript"
          src="chrome://yulup/content/common.js"/>
  <script type="application/x-javascript"
          src="chrome://yulup/content/editor/findreplace/findreplace.js"/>

  <vbox>
    <grid flex="1">
      <columns>
        <column/>
        <column flex="1"/>
      </columns>
      <rows>
        <row align="center">
          <label control="uiSearchStringTextbox" value="Search for:"/>
          <textbox id="uiSearchStringTextbox"/>
        </row>
        <row align="center">
          <label control="uiReplacementStringTextbox" value="Replace with:"/>
          <textbox id="uiReplacementStringTextbox"/>
        </row>
      </rows>
    </grid>

    <separator class="thin"/>

    <checkbox label="Match case"/>
    <checkbox label="Match entire word only"/>
    <checkbox label="Search backwards"/>
    <checkbox label="Wrap around"/>
  </vbox>

  <spacer flex="1"/>

  <hbox equalsize="always" pack="end">
    <button label="Replace All"/>
    <button label="Replace"/>
    <button label="Find Next"/>
    <button dlgtype="cancel"/>
  </hbox>

</dialog>
