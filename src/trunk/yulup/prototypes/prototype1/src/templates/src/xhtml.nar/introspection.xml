<?xml version="1.0"?>

<introspection xmlns="http://www.wyona.org/neutron/1.0">
  <edit mime-type="application/xhtml+xml" name="XHTML template">
    <widgets>
      <widget type="surround" name="Bold" description="Bold Widget" icon="icons/bold.png">
        <fragment>
          <b xmlns=""/>
        </fragment>
      </widget>
      <widget type="insert" name="Table" description="Table Widget" icon="icons/table.png">
        <attribute name="Border" xpath="table/attribute::border"/>
        <attribute name="Padding" xpath="table/attribute::cellpadding"/>
        <attribute name="Spacing" xpath="table/attribute::cellspacing"/>
        <attribute name="Bgcolor" xpath="table/attribute::bgcolor"/>
        <fragment>
          <table border="0" cellpadding="0" cellspacing="0" bgcolor="#d1e2f7" xmlns="">
            <tr>
              <td>Column 1, Row 1</td>
              <td>Column 2, Row 1</td>
            </tr>
            <tr>
              <td>Column 1, Row 2</td>
              <td>Column 2, Row 2</td>
            </tr>
          </table>
        </fragment>
      </widget>
      <widget type="insert" name="List" description="Unordered List Widget" icon="icons/ulist.png">
        <fragment>
          <ul xmlns="">
            <li>List Item 1</li>
            <li>List Item 2</li>
          </ul>
        </fragment>
      </widget>
      <widget type="surround" name="Link" description="Hypertext Link Widget" icon="icons/hlink.png">
        <attribute name="href" xpath="a/attribute::href" type="resource"/>
        <fragment>
          <a xmlns="" href="http://www.yulup.org"/>
        </fragment>
      </widget>
      <widget type="insert" name="Image" description="Image Widget" icon="icons/image.png">
        <attribute name="src" xpath="img/attribute::src" type="resource"/>
        <attribute name="alt" xpath="img/attribute::alt"/>
        <fragment>
          <img xmlns="" src="http://www.yulup.org/images/whale-logo.gif" alt="Yulup Logo"/>
        </fragment>
      </widget>
      <widget type="upload" name="Upload" description="Upload Widget" icon="icons/upload.png"/>
    </widgets>
  </edit>

  <new>
    <template name="XHTML Document" mime-type="application/xhtml+xml" uri="xhtml-template.xml"/>
  </new>
</introspection>
